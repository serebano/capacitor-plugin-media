{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "pretty": true,
    "sourceMap": true,
    "target": "ESNext",
    "inlineSources": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
  },
  "files": ["src/index.ts"]
}
